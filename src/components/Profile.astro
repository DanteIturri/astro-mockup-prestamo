---
interface Props {
  name: string;
  role: string;
}

const { name, role } = Astro.props;
---

<article class="profile">
  <div class="circle"></div>
  <div class="info">
    <h2>{name}</h2>
    <p>{role}</p>
  </div>
</article>

<style>
  .profile {
    --size-image: 60px;
    width: 100%;
    height: 100%;
    display: flex;
    gap: 0.625rem;
    align-items: center;
    padding-top: 1rem;
    padding-bottom: 2rem;
    & .circle {
      width: var(--size-image);
      height: var(--size-image);
      background-color: #fafafa;
      border-radius: 50%;
    }
    & h2 {
      font-weight: 700;
      font-size: 1.375rem;
    }
    & p {
      font-size: 12px;
      color: #666;
    }
  }
</style>